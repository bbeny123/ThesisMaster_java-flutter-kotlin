CREATE TABLE USERS (
	ID INTEGER PRIMARY KEY,
	LOGIN TEXT UNIQUE,
	EMAIL TEXT UNIQUE,
	NAME TEXT NOT NULL,
	AGE INTEGER AS Int NOT NULL CHECK (AGE > 0 AND AGE < 150)
);

clearTable:
DELETE FROM USERS;

selectAll:
SELECT * FROM USERS;

selectOne:
SELECT * FROM USERS WHERE ID = :id;

insert:
INSERT INTO USERS(ID, LOGIN, EMAIL, NAME, AGE) VALUES (:id, :login, :email, :name, :age);

delete:
DELETE FROM USERS WHERE ID = :id;

updateId:
UPDATE USERS SET NAME = :name WHERE ID = :id;